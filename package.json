{
  "name": "gitlab-mcp-server",
  "version": "0.3.0",
  "description": "Model Context Protocol (MCP) server for GitLab: issues, merge requests, repository files, and CI pipelines.",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Firas Mosbehi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firasmosbehi/gitlab-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gitlab",
    "typescript",
    "llm",
    "agent"
  ],
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "gitlab-mcp-server": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
